<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.password"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.password.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="group.pals.android.lib.ui.lockpattern.LockPatternActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:screenOrientation="user" />
        <activity
            android:name="com.password.Preferences"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name="com.password.CreatePatternActivity"
            android:label="@string/title_activity_create_pattern" >
        </activity>
        <activity
            android:name="com.password.ShowCategoryListActivity"
            android:label="@string/title_activity_show_category_list" >
        </activity>
        <activity
            android:name="com.password.AlfanumericActivity"
            android:label="@string/title_activity_alfanumeric" >
        </activity>
        <activity
            android:name="com.password.NumericActivity"
            android:label="@string/title_activity_numeric" >
        </activity>
        <activity
            android:name="com.password.CreateGestureActivity"
            android:label="@string/title_activity_create_gesture" >
        </activity>
        <activity
            android:name="com.password.GestureBuilderActivity"
            android:label="@string/title_activity_gesture_builder" >
        </activity>
        <activity
            android:name="com.password.ValidateGesture"
            android:label="@string/title_activity_validate_gesture" >
        </activity>
        <activity
            android:name="com.password.LoginValidatorActivity"
            android:label="@string/title_activity_login_validator" >
        </activity>
        <activity
            android:name="com.password.ValidateNumericLock"
            android:label="@string/title_activity_validate_numeric_lock" >
        </activity>
        <activity
            android:name="com.password.ValidateAlfaNumericLock"
            android:label="@string/title_activity_validate_alfa_numeric_lock" >
        </activity>
        <activity
            android:name="com.password.ValidateGestureLock"
            android:label="@string/title_activity_validate_gesture_lock" >
        </activity>
    </application>

</manifest>